[user]
    name = Jonathan Slenders
    # Place email into ~/.gitconfig.local
    # (Work/home have different mail.)

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    ui = auto

[push]
    default = current

[pull]
    rebase = true

[core]
    editor = vim

[branch]
    sort = -committerdate

[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig.local

[pager]
   diff = diff-so-fancy | less --tabs=1,5 -RFX
   show = diff-so-fancy | less --tabs=1,5 -RFX
